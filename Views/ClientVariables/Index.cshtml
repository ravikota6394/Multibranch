@model IEnumerable<eTrak.Dal.Models.ClientVariable>

@{
    ViewBag.Title = "Index";
}

<h2>Client Variables</h2>

<p>
    <a href="/ClientVariables/Create/" class="btn btn-success btn-sm">Create New</a>
</p>
<div ng-controller="R_ClientVariable" class="container">
    <table id="idASPClientVariables" show-filter="true" dt-options="dtOptions" datatable="ng" ng-model="ClientVariablesList" class="responsive   table table-striped table-bordered">
        <!--added extra datatable in class to see what happens-->
        <thead class="thin-border-bottom">
            <tr>
                <th data-class="expand">API Feild Name</th>
                <th data-class="expand">Tag Name</th>
                <th data-class="expand">Description</th>
                <th data-hide="screen_xs,screen_sm">Status (L=Live, D=Deleted, I=Ignore) </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="edRec in ClientVariablesList ">
                <td>{{edRec.cvFieldName}}</td>
                <td>{{edRec.cvTag}}</td>
                <td>{{edRec.cvDescription}}</td>
                <td>{{edRec.cvStatus}}</td>
                <td>
                    <a href="ClientVariables/Edit/{{edRec.cvId}}">Edit</a> |
                    <a href="ClientVariables/Details/{{edRec.cvId}}">Details</a>
                </td>
            </tr>

        </tbody>
    </table>
</div>