@model IEnumerable<eTrak.Dal.Models.BudgetCategory>

@{
    ViewBag.Title = "Index";
}

<h2>Budget Categories</h2>

@*<p>
    <strong>@Html.ActionLink("Create New", "Create")</strong>
</p>*@
<p>
    <a href="/BudgetCategories/Create/" class="btn btn-success btn-sm">Create New</a>
</p>
<div ng-controller="R_BudgetCategories" class="container">
    <table id="idASPBudgetCategories" show-filter="true" dt-options="dtOptions" datatable="ng" ng-model="BudgetCategories" class="responsive   table table-striped table-bordered">
        <!--added extra datatable in class to see what happens-->
        <thead class="thin-border-bottom">
            <tr>
                <th data-class="expand">Description</th>
                <th data-hide="screen_xs,screen_sm">Status (L=Live, D=Deleted, I=Ignore) </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="edRec in BudgetCategories ">
                <td>{{edRec.bcDescription}}</td>

                <td>{{edRec.bcStatus}}</td>
                <td>
                    <a href="BudgetCategories/Edit/{{edRec.bcCode}}">Edit</a> |
                    <a href="BudgetCategories/Details/{{edRec.bcCode}}">Details</a>
                </td>
            </tr>

        </tbody>
    </table>
</div>

