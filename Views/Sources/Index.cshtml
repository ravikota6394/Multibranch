@model IEnumerable<eTrak.Dal.Models.Source>

@{
    ViewBag.Title = "Enquiry Sources";
}

<h2>Enquiry Sources</h2>

<p>
    <a href="/Sources/Create/" class="btn btn-success btn-sm">Create New</a>    
</p>
<div ng-controller="R_EnqSources" class="container">
    <table id="idASPUserTimeZones" show-filter="true" dt-options="dtOptions" datatable="ng" ng-model="EnqSources" class="responsive   table table-striped table-bordered">
        <!--added extra datatable in class to see what happens-->
        <thead class="thin-border-bottom">
            <tr>               
                <th data-class="expand">Old Code</th>
                <th data-class="expand">Description</th>               
                <th data-class="expand">Language</th>
                <th data-class="expand">Affiliate</th>
                <th data-class="expand">Is Priority Source</th>
                <th data-class="expand">Is ReadOnly</th>
                <th data-class="expand">Is Approved</th>
                <th data-hide="screen_xs,screen_sm">Status (L=Live, D=Deleted, I=Ignore) </th>

                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="edRec in EnqSources">                
                <td>{{edRec.soCode}}</td>
                <td>{{edRec.soDescription}}</td>                
                <td>{{edRec.lcName}}</td>
                <td>{{edRec.soAffiliate}}</td>
                <td>{{edRec.IsPrioritySource}}</td>
                <td>{{edRec.IsReadOnly}}</td>
                <td>{{edRec.IsApproved}}</td>
                <td>{{edRec.soStatus}}</td>
                <td>
                    <a href="Sources/Edit/{{edRec.soCode}}">Edit</a> |
                    <a href="Sources/Details/{{edRec.soCode}}">Details</a>
                </td>
            </tr>

        </tbody>
    </table>
</div>
