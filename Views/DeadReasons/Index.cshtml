@model PagedList.IPagedList<eTrak.Dal.Models.DeadReason>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Dead Reasons</h2>

<p>
    <a href="/DeadReasons/Create/" class="btn btn-success btn-sm">Create New</a>
    </p>
<div ng-controller="R_DeadReasons" class="container">
    <table id="idASPDeadReasons" show-filter="true" dt-options="dtOptions" datatable="ng" ng-model="DeadReasons" class="responsive   table table-striped table-bordered">
        <!--added extra datatable in class to see what happens-->
        <thead class="thin-border-bottom">
            <tr>
                <th data-class="expand">Enquiry Closed Reason</th>
                <th data-hide="screen_xs,screen_sm">Status (L=Live, D=Deleted, I=Ignore) </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="edRec in DeadReasons ">
                <td>{{edRec.drReason}}</td>
                <td>{{edRec.drStatus}}</td>
                <td>
                    <a href="/DeadReasons/Edit/{{edRec.drCode}}">Edit</a> |
                    <a href="/DeadReasons/Details/{{edRec.drCode}}">Details</a>
                </td>
            </tr>

        </tbody>
    </table>
</div>
