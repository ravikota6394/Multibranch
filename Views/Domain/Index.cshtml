@model IEnumerable<eTrak.Dal.Models.Domain>

@{
    ViewBag.Title = "Enquiry Domains";
}

<h2>Enquiry Domains</h2>

<p>
    <a href="/Domain/Create/" class="btn btn-success btn-sm">Create New</a>    
</p>
<div ng-controller="R_EnqDomains" class="container">
    <table id="idASPUserTimeZones" show-filter="true" dt-options="dtOptions" datatable="ng" ng-model="EnqDomains" class="responsive   table table-striped table-bordered">
        <!--added extra datatable in class to see what happens-->
        <thead class="thin-border-bottom">
            <tr>
                <th data-class="expand">Domain Code</th>
                <th data-class="expand">Domain Name</th>
                <th data-class="expand">IsPriorityDomain</th>                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="edRec in EnqDomains">              
                <td>{{edRec.sdCode}}</td>
                <td>{{edRec.sdName}}</td>
                <td>{{edRec.sdIsPriorityDomain}}</td>
                <td>
                    <a href="Domain/Edit/{{edRec.sdCode}}">Edit</a> |
                    <a href="Domain/Details/{{edRec.sdCode}}">Details</a>
                </td>
            </tr>

        </tbody>
    </table>
</div>

