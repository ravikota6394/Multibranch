<div ng-controller="pvEnquiriesDashboardController as viewModel">
    <div class="modal fade" id="deletequery" role="dialog">
        <div class="modal-dialog">
            <div>

                <div class="modal-content">
                    <div class="modal-header"></div>
                    <div class="modal-body">
                        <center><h5>Are you sure you want to delete Query '{{QueryNameInDashboard}}'?</h5></center>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" ng-click="DeleteSelectedUserQuery(DeleteSelectedQuery)" data-dismiss="modal">Yes</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Modal Design For Displaying Email Received-->
    <div class="modal fade in" id="emailreceived" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table style="width:100%" class="EMailTable   well well-sm">
                            <tr>
                                <th colspan="2" class="tableheader"><center>ENQUIRY&nbsp;&nbsp;{{EmailDetails.eTrakEnquiryID}}&nbsp;-&nbsp;EMAIL&nbsp;&nbsp;RESPONSE</center></th>
                            </tr>
                            <tr>
                                <td class="Tablelabel">Display From:</td>
                                <td class="TableBody">{{TrackingRecord.DisplayFrom}}</td>
                            </tr>
                            <tr>
                                <td class="Tablelabel">Subject:</td>
                                <td class="TableBody">{{TrackingRecord.Subject}}</td>
                            </tr>
                            <tr>
                                <td class="Tablelabel">Display To:</td>
                                <td class="TableBody">{{TrackingRecord.SentTo}}</td>
                            </tr>
                            <tr>
                                <td class="Tablelabel">CC:</td>
                                <td class="TableBody">{{TrackingRecord.CC}}</td>
                            </tr>
                            <tr>
                                <td class="Tablelabel">BCC:</td>
                                <td class="TableBody">{{TrackingRecord.BCC}}</td>
                            </tr>
                            <tr>
                                <td class="Tablelabel">DateTimeReceived:</td>
                                <td class="TableBody">{{TrackingRecord.DateTimeReceived | date:'yyyy-MM-dd  HH:mm:ss'}}</td>
                            </tr>
                            <tr>
                                <td class="Tablelabel" colspan="2">
                                    <p id="scroller" ng-bind-html=Body style="width:843px;"></p>
                                </td>
                            </tr>
                            @*<tr>
                                    <td class="Tablelabel">Attachments:</td>
                                    <td class="TableBody"><a ng-hide="hideAttachments" ng-click="ShowAttachments(TrackingRecord.ID)">Click here to find attachments</a></td>
                                </tr>*@
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Ended Modal Design For Displaying Email Received-->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <span style="font-size: 18px"><b>{{QueryNameInDashboard}}</b></span>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4" style="text-align: right"></div>
            <div class="col-lg-2 col-md-2 col-sm-2" style="text-align: right">
                <input id="id_DeleteQuery" class="btn btn-danger" type="button" ng-click="DeleteQuery(UserQueryId)" value="Delete Query" />
            </div>
        </div>
    </div>
    <div style="width:100%;overflow-x:scroll">
            <div>
                <input type="text" id="id_QueryName" ng-model="CurrentQueryName" hidden />
                <table id="tblWidth" align="left" show-filter="true" class="table table-bordered row-border hover table-responsive" datatable="viewModel.ng"
                       dt-options="viewModel.dtOptions"
                       dt-columns="viewModel.dtColumns"
                       dt-instance="viewModel.dtInstanceCallback" />
            </div>
        </div>
    </div>
