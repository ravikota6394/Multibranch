@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    <div>
        <div class="page-header">
            <div class="row" ng-controller="R_Users">
                <div>
                    <div class="col-xl-6 col-xl-6 col-xxl-7">
                        <div class="col-lg-12 col-xl-12 col-xxl-12 top-actions">
                            <div class="col-lg-2 col-xl-2 col-xxl-2 top-actions">
                                <h1>
                                    User Dashboard
                                    <small class="visible-lg-inline">
                                        <i class="ace-icon fa fa-angle-double-right"></i>
                                        enquiry overview
                                    </small>
                                </h1>
                                <input type="hidden" id="userCode" value="@User.Identity.GetUserName()">
                            </div>
                            <div class="col-lg-10 col-xl-10 col-xxl-10 top-actions">
                                <div class="row row-no-padding">
                                    <div class="col-xs-6 col-sm-4 col-md-3">
                                        <label><b>Working As: &nbsp;{{selectedUser}}</b></label>
                                        <input id="idgblBuddyUser" hidden type="text" value="{{selectedUser}}" />
                                    </div>
                                    @if (Request.IsAuthenticated && User.IsInRole("Supervisor"))
                                    {
                                        <div class="col-xs-12 col-sm-4 col-md-6">
                                            <div>
                                                <div>
                                                    <select id="idglbBuddy" name="idglbBuddy" ng-model="selectedUser" class="form-control"
                                                            ng-options="RURec.usCode as RURec.usDescription for RURec in usersUnderSupervisors | orderBy : 'usCode' | filter: {usStatus: 'L'}">
                                                           <option value="">ALL - Users</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-xs-12 col-sm-4 col-md-6">
                                            <div>
                                                <div>
                                                    <select id="idglbBuddy" name="idglbBuddy" ng-model="selectedUser" class="form-control"
                                                            ng-options="RURec.usCode as RURec.usDescription for RURec in AssignedBuddyUsers | orderBy : 'usCode' | filter: {usStatus: 'L'}"></select>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <div class="col-xs-6 col-sm-4 col-md-3">
                                        <span class="input-group-btn">
                                            <a ng-click="GetDashboardOfSelectedUser(selectedUser);" class="btn btn-sm btn-primary no-border btn-block">
                                                <i class="ace-icon fa fa-refresh"></i>
                                                Refresh Dashboard
                                            </a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-xl-6 col-xxl-5 top-actions">
                        <div class="row row-no-padding">
                            @if (Request.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("SuperAdmin") || User.IsInRole("Senior Manager") || User.IsInRole("Manager") || User.IsInRole("Supervisor") || User.IsInRole("Resteam")))
                            {
                                <div class="col-xs-12 col-sm-4 col-md-6">
                                    <div>
                                        <div>
                                            <select id="idglbDisplayBuddy" name="idglbDisplayBuddy" ng-model="buddy" ng-change="SaveBuddy(buddy)" class="form-control">
                                                <option value="No Buddy Selected">No Buddy Selected</option>
                                                <option ng-repeat="RURec in UsersView | orderBy : 'usCode' | filter: {usStatus: 'L'} | buddyFilter : glbWhiteLabel " value="{{RURec.usCode}}">{{ RURec.usCode}} - {{ RURec.usDescription}}</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-4 col-md-3">
                                    <span class="input-group-btn">
                                        <button class="btn btn-sm btn-default no-border btn-block">
                                            <i class="ace-icon fa fa-user bigger-110"></i>
                                            Buddy
                                        </button>
                                    </span>
                                </div>
                            }
                            @if (Request.IsAuthenticated && !User.IsInRole("Client User"))
                            {
                                <div class="col-xs-6 col-sm-4 col-md-3">
                                    <span class="input-group-btn">
                                        <a ng-click="createNewEnquiry();" confirm="Create a  NEW enquiry?" class="btn btn-sm btn-success no-border btn-block">
                                            <i class="ace-icon fa fa-file-o"></i>
                                            New Enquiry
                                        </a>
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Google Analytics Script-->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-47702928-1', 'auto');
        ga('send', 'pageview');
    </script>
    <!--Ended Google Analytics Script-->

}
