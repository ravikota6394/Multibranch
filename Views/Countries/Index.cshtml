

<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />

@{
    ViewBag.Title = "Index";
}

<h2>Countries</h2>

<p>
    <a href="/Countries/Create/" class="btn btn-success btn-sm">Create New</a>
</p>
<div ng-controller="R_Countries" class="container">
    <table id="idASPCountries" show-filter="true" dt-options="dtOptions" datatable="ng" ng-model="Countries" class="responsive   table table-striped table-bordered">
        <!--added extra datatable in class to see what happens-->
        <thead class="thin-border-bottom">
            <tr>
                <th data-class="expand">Description</th>
                <th data-hide="screen_xs,screen_sm">Status (L=Live, D=Deleted, I=Ignore) </th>
                <th data-class="expand">Time Zone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            <tr ng-repeat="edRec in Countries ">
                <td>{{edRec.coName}}</td>
                <td>{{edRec.coStatus}}</td>
                <td>{{edRec.tzDescription}}</td>
                <td>
                    <a href="Countries/Edit/{{edRec.coCode}}">Edit</a> |
                    <a href="Countries/Details/{{edRec.coCode}}">Details</a>
                </td>
            </tr>

        </tbody>
    </table>
</div>
